@model DarkLibCW.Models.Booking

@{
    ViewData["Title"] = "Добавление";
}

<h4>Добавление Выдачи</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SubscriberId" class="control-label"></label>
                <select asp-for="SubscriberId" class ="form-control" asp-items="ViewBag.SubscriberId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавление" class="btn btn-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-back" asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
