@model DarkLibCW.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h3>Вы действительно хотите удалить данную запись?</h3>
<div>
    <h4>Книга</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CatalogCard)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatalogCard.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-delete" /> |
        <a asp-action="Index" class="btn btn-back">Вернуться к списку</a>
    </form>
</div>
