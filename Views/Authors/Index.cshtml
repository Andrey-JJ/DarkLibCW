@model IEnumerable<DarkLibCW.Models.Author>

@{
    ViewData["Title"] = "Авторы";
}

<h1>Таблица Авторов:</h1>

<p>
    <a class="btn btn-1" asp-action="Create">Добавление новой записи</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MidName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MidName)
            </td>
            <td>
                <a class="btn btn-edit" asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                <a class="btn btn-edit" asp-action="Details" asp-route-id="@item.Id">Детализация</a>
                <a class="btn btn-delete" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
