@model IEnumerable<DarkLibCW.Models.CatalogCard>

@{
    ViewData["Title"] = "Каталожная карточка книги";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-1">Добавление новой записи</a>
</p>

@foreach (var item in Model)
{
    <div class="card-container">
        <a asp-action="Details" asp-route-id="@item.Id" class="card-wrapper">
            <div class="card-image-ct">
                <input type="hidden" name="Image" value="@item.Image" />
                @if (ViewBag.Image != null)
                {
                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Image))" alt="book-img.jpg" class="mt-4 mb-4 card-image">
                }
            </div>
            <div class="card-info-ct">
                <h3 class="card-title line-clamp">@Html.DisplayFor(modelItem => item.Title)</h3>
                <ul class="card-info-edition">
                    <li>@Html.DisplayFor(modelItem => item.Edition)</li>
                    <li>@Html.DisplayFor(modelItem => item.EditionDate)</li>
                </ul>
            </div>
        </a>
    </div>
}
